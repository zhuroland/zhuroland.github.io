---
import type { Icons } from "./icons";
import { Icon } from "@astrojs/starlight/components";

type Props = {
  title: string;
  icon: Icons;
  href?: string;
  target?: boolean;
};

const { href, target, title, icon } = Astro.props;
---

<article class="card sl-flex">
  <div class="card-header">
    <p class="title sl-flex">
      {icon && <Icon name={icon} class="icon" size="1.333em" />}
      {
        href ? (
          <a
            href={href}
            target={target ? "_blank" : ""}
            aria-label={`Navigate to ${title}`}
            class="external-link"
          >
            {title}
          </a>
        ) : (
          <span>{title}</span>
        )
      }
    </p>
  </div>
  <div class="body">
    <slot />
  </div>
</article>

<style>
  .card {
    --sl-card-border: var(--sl-color-purple);
    --sl-card-bg: var(--sl-color-purple-low);
    border: 1px solid var(--sl-color-gray-5);
    background-color: var(--sl-color-black);
    padding: clamp(1rem, calc(0.125rem + 3vw), 2.5rem);
    flex-direction: column;
    gap: clamp(0.5rem, calc(0.125rem + 1vw), 1rem);
    height: fit-content;
    position: relative;
    transition:
      box-shadow 0.2s ease,
      border-color 0.2s ease;
    border-radius: 8px;
  }

  .card-header {
    display: block;
  }

  .card:nth-child(4n + 3) {
    --sl-card-border: var(--sl-color-green);
    --sl-card-bg: var(--sl-color-green-low);
  }
  .card:nth-child(4n + 4) {
    --sl-card-border: var(--sl-color-red);
    --sl-card-bg: var(--sl-color-red-low);
  }
  .card:nth-child(4n + 5) {
    --sl-card-border: var(--sl-color-blue);
    --sl-card-bg: var(--sl-color-blue-low);
  }

  .card .title {
    font-weight: 600;
    font-size: var(--sl-text-h4);
    color: var(--sl-color-white);
    line-height: var(--sl-line-height-headings);
    gap: 1rem;
    align-items: center;
    margin: 0;
  }
  .card .icon {
    border: 1px solid var(--sl-card-border);
    background-color: var(--sl-card-bg);
    padding: 0.2em;
    border-radius: 0.25rem;
  }
  .card .body {
    margin: 0;
    font-size: clamp(
      var(--sl-text-sm),
      calc(0.5rem + 1vw),
      var(--sl-text-body)
    );
  }
  a {
    display: inline;
    color: inherit !important;
    text-decoration: none;
  }
  a:hover {
    text-decoration: underline;
  }
  .external-link {
    position: relative;
  }
  .external-link::after {
    content: "";
    background-image: url("./assets/svg/external.svg");
    position: absolute;
    scale: 1.2;
    width: 1rem;
    height: 1rem;
    margin-top: 0.2rem;
    margin-left: 0.2rem;
  }
</style>
