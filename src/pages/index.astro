---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Home Page">
	<main>
		<h1>Welcome to my <span class="gradient">Portfolio</span></h1>
		<ul role="list" class="link-card-grid">
			<Card
				href="/docs"
				title="Documentation"
				body="Learn how Astro works and explore the official API docs."
			/>
			<Card href="/me" title="About me" body="a summary about myself." />
		</ul>
	</main>
</Layout>

<style>
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
